    div.dataTables_wrapper {
        width: 100%;
        margin: 0 auto;
    }
</style>
@section scripts{

    <script charset="utf8" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    @*<script charset="utf8" src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>*@
    <script charset="utf8" src="https://cdn.datatables.net/1.10.21/js/dataTables.semanticui.min.js"></script>
    <script charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({
                "scrollY": 400,
                "scrollX": true
            });
        });
    </script>
}