
@{
    ViewBag.Title = "BacklogSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Backlog Summary</h2>

<div>
    @using (Html.BeginForm("BacklogSummary", "List", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Raw(ViewBag.Error)
        <span>Excel File</span><input type="file" name="postedFile" />
        <br />
        <input type="submit" value="Import" />
    }
    <br />
    <br />
</div>
<div>
    @if (ViewBag.Backlog_Summary_Data != null)
    {
        <table id="example" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Oper Unit")</th>
                    <th>@Html.DisplayName("Order No")</th>
                    <th>@Html.DisplayName("Creation Date")</th>
                    <th>@Html.DisplayName("Customer Name")</th>
                    <th>@Html.DisplayName("Current_Request_Date")</th>
                    <th>@Html.DisplayName("Current Ship Date")</th>
                    <th>@Html.DisplayName("Required_Build_Date")</th>
                    <th>@Html.DisplayName("Extended Material Cost in USD")</th>
                    <th>@Html.DisplayName("Line Total In Usd SUM")</th>
                    <th>@Html.DisplayName("Ip Order Subtype")</th>
                    <th>@Html.DisplayName("Project Substation Name")</th>
                    <th>@Html.DisplayName("Freight Terms Header")</th>
                    <th>@Html.DisplayName("Incoterm")</th>
                    <th>@Html.DisplayName("Business Area")</th>
                    <th>@Html.DisplayName("Ip Process Owner")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<Inventory.Models.Backlog_Summary>)ViewBag.Backlog_Summary_Data)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Oper_Unit)</td>
                        <td>@Html.DisplayFor(modelItem => item.Order_No)</td>
                        <td>@string.Format("{0:dd/MM/yyyy}", item.Creation_Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Customer_Name)</td>
                        <td>
                            @string.Format("{0:dd/MM/yyyy}", item.Current_Request_Date)
                            @*@Html.DisplayFor(modelItem => item.Current_Request_Date)*@
                        </td>
                        <td>@string.Format("{0:dd/MM/yyyy}", item.Current_Ship_Date)</td>
                        <td>@string.Format("{0:dd/MM/yyyy}", item.Required_Build_Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Extended_Material_Cost_USD)</td>
                        <td>@Html.DisplayFor(modelItem => item.Line_Total_USD_SUM)</td>
                        <td>@Html.DisplayFor(modelItem => item.IP_Order_Subtype)</td>
                        <td>@Html.DisplayFor(modelItem => item.Project_Substation_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Freight_Terms_Header)</td>
                        <td>@Html.DisplayFor(modelItem => item.Incoterm)</td>
                        <td>@Html.DisplayFor(modelItem => item.Business_Area)</td>
                        <td>@Html.DisplayFor(modelItem => item.IP_Process_Owner)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
