
@{
    ViewBag.Title = "BacklogDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Backlog Detail</h2>

<div>
    @using (Html.BeginForm("BacklogDetail", "List", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.Raw(ViewBag.Error)
        <span>Excel File</span><input type="file" name="postedFile" />
        <br />
        <input type="submit" value="Import" />
    }
    <br />
    <br />
</div>
<div>
    @if (ViewBag.Backlog_Detail_Data != null)
    {
        <table id="example" class="display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Oper Unit")</th>
                    <th>@Html.DisplayName("Mfg Plant")</th>
                    <th>@Html.DisplayName("Order No")</th>
                    <th>@Html.DisplayName("Customer PO Number")</th>
                    <th>@Html.DisplayName("Customer Name")</th>
                    <th>@Html.DisplayName("Ship Customer Name")</th>
                    <th>@Html.DisplayName("Request Date")</th>
                    <th>@Html.DisplayName("Current Ship Date")</th>
                    <th>@Html.DisplayName("Required_Build_Date")</th>
                    <th>@Html.DisplayName("Line Status")</th>
                    <th>@Html.DisplayName("Item No")</th>
                    <th>@Html.DisplayName("Quantity")</th>
                    <th>@Html.DisplayName("Unit Cost")</th>
                    <th>@Html.DisplayName("Extended Material Cost in Building Currency")</th>
                    <th>@Html.DisplayName("Line Total in Func Curr")</th>
                    <th>@Html.DisplayName("Line Total In Usd")</th>
                    <th>@Html.DisplayName("Incoterm")</th>
                    <th>@Html.DisplayName("Payment Terms")</th>
                    <th>@Html.DisplayName("Item_Type_Code")</th>
                    <th>@Html.DisplayName("Business Area")</th>
                    <th>@Html.DisplayName("Latest_USD_Exchange_Rate")</th>
                    <th>@Html.DisplayName("Material_Cost_USD")</th>
                    <th>@Html.DisplayName("Extended Material Cost in USD")</th>
                    <th>@Html.DisplayName("Project Substation Name")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in (List<Inventory.Models.Backlog_Detail>)ViewBag.Backlog_Detail_Data)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Oper_Unit)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mfg_Plant)</td>
                        <td>@Html.DisplayFor(modelItem => item.Order_No)</td>
                        <td>@Html.DisplayFor(modelItem => item.Customer_PO_Number)</td>
                        <td>@Html.DisplayFor(modelItem => item.Customer_Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ship_Customer_Name)</td>
                        <td>@string.Format("{0:dd/MM/yyyy}", item.Request_Date)</td>
                        <td>@string.Format("{0:dd/MM/yyyy}", item.Current_Ship_Date)</td>
                        <td>@string.Format("{0:dd/MM/yyyy}", item.Required_Build_Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Line_Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item_No)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Unit_Cost)</td>
                        <td>@Html.DisplayFor(modelItem => item.Extended_Material_Cost_Building_Currency)</td>
                        <td>@Html.DisplayFor(modelItem => item.Line_Total_Func_Curr)</td>
                        <td>@Html.DisplayFor(modelItem => item.Line_Total_USD)</td>
                        <td>@Html.DisplayFor(modelItem => item.Incoterm)</td>
                        <td>@Html.DisplayFor(modelItem => item.Payment_Terms)</td>
                        <td>@Html.DisplayFor(modelItem => item.Item_Type_Code)</td>
                        <td>@Html.DisplayFor(modelItem => item.Business_Area)</td>
                        <td>@Html.DisplayFor(modelItem => item.Latest_USD_Exchange_Rate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Material_Cost_USD)</td>
                        <td>@Html.DisplayFor(modelItem => item.Extended_Material_Cost_USD)</td>
                        <td>@Html.DisplayFor(modelItem => item.Project_Substation_Name)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet" />
